<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/background_light"
    tools:ignore="ExtraText"> <!-- Set background color -->

    <TextView
        android:id="@+id/quest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="퀘스트 1"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp"
        android:background="@android:color/transparent" /> <!-- Make sure background is transparent -->

    <TextView
        android:id="@+id/quest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="퀘스트 2"
        android:textSize="18sp"
        android:textColor="@android:color/black"
    android:paddingBottom="8dp"
    android:background="@android:color/transparent" /> <!-- Make sure background is transparent -->

    <TextView
        android:id="@+id/quest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="퀘스트 3"
        android:textSize="18sp"
        android:textColor="@android:color/black"
    android:paddingBottom="16dp"
    android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btn_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카메라로 퀘스트 수행하기"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:padding="10dp" />

</LinearLayout>
