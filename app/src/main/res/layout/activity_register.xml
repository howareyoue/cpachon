<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:hint="이메일을 입력하세요"
        android:hintTextColor="@color/hint_color"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:hint="비밀번호를 입력하세요"
        android:hintTextColor="@color/hint_color"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:hint="이름을 적어주세요"
        android:hintTextColor="@color/hint_color"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/et_dog_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:hint="반려견 이름을 적어주세요"
        android:hintTextColor="@color/hint_color"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/et_dog_breed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:hint="반려견 품종을 적어주세요"
        android:hintTextColor="@color/hint_color"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dog_name"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/et_dog_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:hint="반려견 나이를 적어주세요"
        android:hintTextColor="@color/hint_color"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dog_breed"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="@drawable/rounded_button"
        android:text="가입완료"
        android:textColor="@color/button_text_color"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dog_age"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
